{
	"name": "app",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite --host",
		"build": "tsc && vite build && npm run build:locale",
		"build:locale": "npm run locale:extract && npm run locale:compile && copyfiles \"./locales/**\" ./dist",
		"lint": "eslint . --ext ts,tsx --report-unused-disable-directives --fix",
		"locale:extract": "formatjs extract \"./src/**/*.{js,jsx,ts,tsx}\" --ignore=\"./src/**/*.d.ts\" --flatten --out-file \"./locales/extract/en-US.json\" --throws",
		"locale:compile": "formatjs compile-folder \"./locales/extract\" \"./locales/compiled\"",
		"prettier": "prettier --write ./src",
		"preview": "vite preview"
	},
	"dependencies": {
		"@emotion/react": "^11.11.1",
		"@emotion/styled": "^11.11.0",
		"@mui/material": "^5.14.6",
		"axios": "^1.5.0",
		"classnames": "^2.3.2",
		"howler": "^2.2.3",
		"material-symbols": "^0.11.0",
		"openai": "^4.4.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-intl": "^6.4.4",
		"react-router-dom": "^6.15.0",
		"swr": "^2.2.2",
		"tesseract.js": "^4.1.2"
	},
	"devDependencies": {
		"@formatjs/cli": "^6.1.5",
		"@types/howler": "^2.2.9",
		"@types/node": "^20.5.7",
		"@types/react": "^18.2.15",
		"@types/react-dom": "^18.2.7",
		"@vitejs/plugin-react-swc": "^3.3.2",
		"autoprefixer": "^10.4.15",
		"copyfiles": "^2.4.1",
		"postcss": "^8.4.28",
		"tailwindcss": "^3.3.3",
		"typescript": "^5.0.2",
		"vite": "^4.4.5",
		"vite-plugin-mkcert": "^1.16.0",
		"vite-plugin-pwa": "^0.16.4"
	}
}
